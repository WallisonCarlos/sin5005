<% provide(:title, 'Todos as categorias') %>
<h1>Todas as Categorias</h1>
<% link_to 'Nova Categoria', new_category_path %>
<ul class="categories">
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
      </tr>
    </thead>
 
    <tbody>
      <% @categories.each do |category| %>
        <tr>      
          <td><%= category.name %></td>
          <td><%= category.description %></td>
	        <td><%= link_to 'Editar', action: 'edit', id: category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</ul>

